generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  phone   Int?     @unique
  email   String?  @unique
  avatar  String?
  created DateTime @default(now())
  updated DateTime @updatedAt
  tokens  Token[]
}

model Token {
  id      Int      @id @default(autoincrement())
  payload String   @unique
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
  created DateTime @default(now())
  updated DateTime @updatedAt

  @@index([userId])
}

